{% extends 'base.html.twig' %}

{% block title %}Inscription - Music Blog{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-person-plus"></i> Inscription</h3>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                    <div class="mb-3 text-primary">
                        {{ form_label(registrationForm.username) }}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control search-box'}}) }}
                        {{ form_errors(registrationForm.username) }}
                    </div>

                    <div class="mb-3 text-primary">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control search-box'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="mb-3 text-primary">
                        {{ form_label(registrationForm.plainPassword.first) }}
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control search-box'}}) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>

                    <div class="mb-3 text-primary">
                        {{ form_label(registrationForm.plainPassword.second) }}
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control search-box'}}) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> S'inscrire
                        </button>
                    </div>
                    {{ form_end(registrationForm) }}

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-secondary mb-2">Déjà inscrit ?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Se connecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
